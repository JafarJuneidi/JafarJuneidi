---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Body from '../components/Body.astro';
import Content from '../components/Content.astro';
import Masthead from '../components/Masthead.astro';
import { SITE_TITLE, SITE_DESCRIPTION, HOMEPAGE_URL } from '../config';

import { IoChevronForward } from 'react-icons/io5/index.js';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<Body>
		<Header title={SITE_TITLE} />
		<main class="pt-[56px]">
      <Masthead />
      <Content>
        <section>
          <h1 class="text-3xl text-center font-mplus mt-12 mb-8">Thank you for subscribing.</h1>
          <h1 class="text-xl text-center font-mplus">You are now confirmed. You can expect to receive emails as I create new content.</h1>
          <div class="text-center py-4">
            <a class="inline-flex items-center gap-1 underline underline-offset-2 decoration-blue-500" href="/">Go to Index <IoChevronForward /></a>
          </div>
        </section>
      </Content>
		</main>
		<Footer />
	</Body>
</html>

